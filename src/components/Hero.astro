  <div class="flex-1 text-center lg:text-left space-y-4">
    <h1 class="font-bold text-4xl">{headLine}</h1>
    <h2 class="text-lg">{subHeadLine}</h2>
    <a
      href={signupURL}
      class="rounded inline-block hover:brightness-90 transition bg-[#c64037] text-white font-bold py-2 px-4"
    >
      {cta}
    </a>
  </div>

  <!-- Imagen -->
